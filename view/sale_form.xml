<data>
    <xpath
        expr="/form/notebook/page[@id='sale']/group[@id='amount']/label[@name='total_amount']"
        position="before">
        <group id="sale_discount" colspan="2" col="3" xexpand="0">
            <label name="sale_discount" xalign="1.0" xexpand="1"/>
            <group id="discount_percent" colspan="1" col="2" xexpand="0">
                <field name="sale_discount" factor="100" xalign="1.0" xexpand="0"/>
                <label name="sale_discount" string="%" xalign="0.0" xexpand="1" xfill="1"/>
            </group>
        </group>
    </xpath>
</data>
